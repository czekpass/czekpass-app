<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new product for your business</h1>

      <%= simple_form_for @product do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price_cents %>
        <%= f.input :category %>
        <%= f.input :photo %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>


