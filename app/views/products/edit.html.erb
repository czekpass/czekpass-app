<div class="container">
  <h1>Edit your product</h1>
  <%= simple_form_for [@business, @product] do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :price_cents %>
  <%= f.submit class: 'btn btn-primary' %>
  <% end %>
  <%= link_to "Delete this product", business_product_path, method: :delete, data: { confirm: "Are you sure?" } %>
</div>
