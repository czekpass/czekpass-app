<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new business</h1>

      <%= simple_form_for @business do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :logo %>
        <%= f.input :location %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
