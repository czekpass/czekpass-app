<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new perk for your product</h1>

      <%= simple_form_for [@business, @product, @perk] do |f| %>
      <%= f.input :description %>
      <%= f.input :kind %>
      <%= f.input :amount %>
      <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>


