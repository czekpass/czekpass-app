      <div class="container bg-gradient-primary">
        <div class="card shadow-lg o-hidden border-0 my-5">
          <div class="card-body p-0">
            <div class="row">
              <div class="col-lg-5 d-none d-lg-flex">
                <div class="flex-grow-1 bg-register-image" style="background-image: url(&quot;https://images.unsplash.com/photo-1559056961-1f4dbbf9d36a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80&quot;);"></div>
              </div>
              <div class="col-lg-7">
                <div class="p-5">
                  <div class="text-center">
                    <h4 class="text-dark mb-4">Create an Account!</h4>
                  </div>

                  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "user"}) do |f| %>
                    <%= f.error_notification %>

                      <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                          <%= f.input :first_name, label: false, required: true, input_html: { class:"form-control form-control-user", placeholder:"First Name", autocomplete: "email"}%>
                          </div>
                        <div class="col-sm-6">
                          <%= f.input :last_name, label: false, required: true, input_html: { class:"form-control form-control-user", placeholder:"Last Name", autocomplete: "email"}%>
                          </div>
                      </div>

                      <div class="form-group">
                        <%= f.input :email, label: false, required: true, autofocus: true, input_html: { class:"form-control form-control-user", placeholder:"Email Address", autocomplete: "email"}%>
                      </div>

                      <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                          <%= f.input :password, label: false, required: true, input_html: { class:"form-control-user", placeholder:"Password", autocomplete: "new-password" } %>
                        </div>
                        <div class="col-sm-6">
                          <%= f.input :password_confirmation, label: false, required: true, label: false, input_html: { class:"form-control-user", placeholder:"Again Please :)", autocomplete: "new-password" } %>
                        </div>


                      </div>
                      <!--<button class="btn btn-primary btn-block text-white btn-user" type="submit">Register Account</button>-->
                      <%= f.button :submit, "Register Account", class: "btn btn-primary btn-block text-white btn-user" %>

                        <hr><a class="btn btn-primary btn-block text-white btn-google btn-user" role="button"><i class="fab fa-google"></i>&nbsp; Register with Google</a><a class="btn btn-primary btn-block text-white btn-facebook btn-user" role="button"><i class="fab fa-facebook-f"></i>&nbsp; Register with Facebook</a>
                        <hr>
                        <% end %>
                          <div class="text-center small">
                            <%= render "devise/shared/links" %>
                          </div>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
