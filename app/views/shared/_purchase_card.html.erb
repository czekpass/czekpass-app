<div class="card-purchase">
  <div class="photo">
    <p><%= purchase.product.photo %></p>
  </div>
  <div class="card-product-infos">
    <h2><%= link_to purchase.product.name, business_products_path %></h2>
    <p class="mb-0"><strong> <%= purchase.product.description %></strong></p>
    Price: <p><%= purchase.product.price_cents %></p>
    Purchased on:
    <%= purchase.created_at.strftime("%B %d, %Y") %>
    Expires on:
    <%= purchase.expiration_date %>
  </div>


